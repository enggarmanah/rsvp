<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.datepicker.client">
	<g:HTMLPanel>

		<div id="location-dlg-wrapper">
			<div id="location-dlg">
				<div>
					<div id="notification">Silahkan klik peta di bawah ini untuk menentukan posisi pusat pencarian anda.</div>
					<div id="distance-label">Jarak Pencarian:</div>
					<div id="distance-value">
						<g:ListBox ui:field="distanceLb" styleName="distance-lb">
							<g:item value="1000">1,0 KM</g:item>
							<g:item value="2500">2,5 KM</g:item>
							<g:item value="5000">5,0 KM</g:item>
							<g:item value="7500">7,5 KM</g:item>
							<g:item value="10000">10 KM</g:item>
						</g:ListBox>
					</div>
				</div>
				<g:HTMLPanel ui:field="infoPanel" styleName="search-map-section">
					<div id="search-map-info">
						<div id="map_canvas" style="width:100%; height:100%" class="search-map"></div>
					</div>
				</g:HTMLPanel>
				<div id="search-map-button">
					<g:Button ui:field="okBtn" text="OK" styleName="button" width="75px"/>
				</div>
			</div>
		</div>

	</g:HTMLPanel>

</ui:UiBinder> 