<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.datepicker.client">
	<g:HTMLPanel>

		<div id="profile-wrapper">
			<div id="profile-menu-wrapper">
				<div id="profile-menu">
					<g:Label ui:field="locationMenuLb" styleName="menu">Lokasi</g:Label>
					<g:Label ui:field="serviceMenuLb" styleName="menu">Layanan</g:Label>
					<g:Label ui:field="doctorMenuLb" styleName="menu">Dokter</g:Label>
					<g:Label ui:field="galleryMenuLb" styleName="menu">Galeri</g:Label>
					<g:Label ui:field="branchMenuLb" styleName="menu">Cabang</g:Label>
				</div>
			</div>
			<div id="profile-content">
				<div id="profile-divider"></div>
				<div id="profile-inst-name">
					<g:Label ui:field="nameLb"></g:Label>
				</div>
				<div id="profile-inst-contact">
					<div id="left">
						<div class="inst-subinfo-icon">
							<img src="images/building.png" class="contact-img"/>
						</div>
						<div class="inst-subinfo-content">
							<g:Label ui:field="addressLb"></g:Label>
						</div>
						<div class="inst-subinfo-icon">
							<img src="images/phone.png" class="contact-img"/>
						</div>
						<div class="inst-subinfo-content">
							<g:Label ui:field="phoneLb"></g:Label>
						</div>
						<div class="inst-subinfo-icon">
							<img src="images/mail.png" class="contact-img"/>
						</div>
						<div class="inst-subinfo-content">
							<g:Label ui:field="emailLb"></g:Label>
						</div>
					</div>
					<div id="right">
						<div id="profile-inst-logo">
							<g:Image ui:field="logoImg"></g:Image>
						</div>
					</div>
				</div>
				
				<g:SimplePanel ui:field="linksPanel">
					<g:FlowPanel styleName="profile-inst-link">
						<g:FlowPanel styleName="link">
							<g:SimplePanel ui:field="websiteImg" styleName="icon">
								<g:Image url="images/laptop.png" styleName="contact-img"></g:Image>
							</g:SimplePanel>
							<g:SimplePanel ui:field="websiteInfo" styleName="content">
								<g:Label ui:field="websiteLb"></g:Label>
							</g:SimplePanel>
						</g:FlowPanel>
						<g:FlowPanel styleName="link">
							<g:SimplePanel ui:field="facebookImg" styleName="icon">
								<g:Image url="images/facebook-small.png" styleName="contact-img"></g:Image>
							</g:SimplePanel>
							<g:SimplePanel ui:field="facebookInfo" styleName="content">
								<g:Label ui:field="facebookLb" text="theclinic"></g:Label>
							</g:SimplePanel>
						</g:FlowPanel>
						<g:FlowPanel styleName="link">
							<g:SimplePanel ui:field="twitterImg" styleName="icon">
								<g:Image url="images/twitter-small.png" styleName="contact-img"></g:Image>
							</g:SimplePanel>
							<g:SimplePanel ui:field="twitterInfo" styleName="content">
								<g:Label ui:field="twitterLb" text="theclinic"></g:Label>
							</g:SimplePanel>
						</g:FlowPanel>
					</g:FlowPanel>
				</g:SimplePanel>
				
				<g:SimplePanel ui:field="infoPanel" styleName="profile-inst-section"></g:SimplePanel>
				
				<div id="profile-inst-button">
					<g:Button ui:field="okBtn" text="OK" styleName="button" width="75px"/>
				</div>
			</div>
		</div>

	</g:HTMLPanel>

</ui:UiBinder> 