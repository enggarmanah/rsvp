<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.datepicker.client">
	<g:HTMLPanel>
		
		<div class="promo-dtl">
			<div class="promo">
				<g:Label ui:field="nameLb" styleName="name"></g:Label>
				<g:Label ui:field="priceLb" styleName="price"></g:Label>
			</div>
			<div class="promo-desc">
				<g:Label ui:field="descriptionLb"></g:Label>
			</div>
			<div class="promo-partner">
				<img src="images/hospital.png" class="icon"/>
				<g:Label ui:field="institutionLb" styleName="inst"></g:Label>
			</div>
			<g:Image ui:field="serviceImg" styleName="image"></g:Image>
		</div>
		
	</g:HTMLPanel>

</ui:UiBinder> 